PORT=8080
APP_NAME=Telex Waitlist
DATABASE_URL=postgres://postgres:postgres@localhost:5432/telex_waitlist?sslmode=disable

# Admin token for listing waitlist entries (set to empty to disable the listing endpoint)
ADMIN_API_KEY=change-me

# Comma-separated list of allowed origins for CORS. Leave empty to allow any origin.
ALLOWED_ORIGINS=http://localhost:3000

# Email / SMTP settings
EMAIL_ENABLED=true
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@example.com

# Logging
LOG_LEVEL=info
